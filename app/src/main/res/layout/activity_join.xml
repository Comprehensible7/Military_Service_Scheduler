<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="회원 가입"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/join_id"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="아이디 입력"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffff" />

            <Button
                android:id="@+id/join_id_chack"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:text="중복 확인"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <EditText
            android:id="@+id/join_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_no_encryption_black_24dp"
            android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
            android:hint="패스워드 입력"
            android:inputType="textPassword"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/join_password2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_no_encryption_black_24dp"
                android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
                android:hint="패스워드 재입력"
                android:inputType="textPassword"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffff" />

            <ImageView
                android:id="@+id/Image_chack"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <EditText
            android:id="@+id/join_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_face_black_24dp"
            android:drawableLeft="@drawable/ic_face_black_24dp"
            android:hint="이름"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/join_tel"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_domain_black_24dp"
            android:drawableLeft="@drawable/ic_domain_black_24dp"
            android:hint="전화번호 (010-****-****)"
            android:inputType="number"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/join_address"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_domain_black_24dp"
            android:drawableLeft="@drawable/ic_domain_black_24dp"
            android:hint="이메일 (example@exam.ple)"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/last_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="회원가입"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/last_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="뒤로가기"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>